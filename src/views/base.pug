doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet" href="https://unpkg.com/mvp.css")
        title #{pageTitle} | Youtube 
    body
        main
            nav
                ul
                    
                    li 
                        a(href="/") Home
                    li 
                        a(href="/search") Search
                    if loggedIn
                        li 
                            a(href="/videos/upload") Upload 
                        li 
                            a(href=`/users/${user._id}/profile`) Profile 
                        li 
                            a(href="/logout") Logout 

                    else 
                        li 
                            a(href="/login") Login 
                        li  
                            a(href="/join") Join




        main
            header
                h1=pageTitle
            block content
